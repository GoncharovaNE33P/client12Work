<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:client.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="client.EditCreateHotelPage"
			 x:DataType="vm:EditCreateHotelVM">

	<Grid RowDefinitions="8*,65*,7*">
		<StackPanel Grid.Row="0" Orientation="Horizontal">
				<Button Classes="BTEdit" Command="{Binding ToHotelsPage}" Content="Назад"></Button>
				<Button Classes="BTEdit" Command="{Binding AddEditCommand}" Content="{Binding NameBT}"></Button>
		</StackPanel>
		<StackPanel Grid.Row="1" HorizontalAlignment="Center">
			<TextBox Classes="TBFieldEdit" Watermark="Введите наименование отеля"  Text="{Binding NewHotel.NameHotel}"></TextBox>
			<TextBox Classes="TBFieldEdit" Watermark="Введите количество звезд" Text="{Binding CountStars}"></TextBox>
			<TextBox Classes="TBFieldEdit" Watermark="Введите описание отеля" Text="{Binding NewHotel.Description}" TextWrapping="Wrap" Height="100"></TextBox>
			<ComboBox Classes="CBFieldEdit" ItemsSource="{Binding CountryList}" SelectedValue="{Binding SelectedCountry}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding NameCountry}"/>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
		</StackPanel>
	</Grid>

</UserControl>
