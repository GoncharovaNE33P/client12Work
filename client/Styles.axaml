<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

	<Style Selector="TextBlock">
		<Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
	</Style>

  <!-- Add Styles Here -->	
	<Style Selector="Border.tours">
		<Setter Property="BorderBrush" Value="#445c93"></Setter>
		<Setter Property="BorderThickness" Value="3"></Setter>
		<Setter Property="Padding" Value="10 10 10 10 "></Setter>
		<Setter Property="CornerRadius" Value="3"></Setter>
		<Setter Property="Height" Value="300"></Setter>
		<Setter Property="Width" Value="350"></Setter>
	</Style>
	
	<Style Selector="Image">
		<Setter Property="Width" Value="200"></Setter>
		<Setter Property="Height" Value="150"></Setter>
		<Setter Property="Margin" Value="0 10 0 10"></Setter>
	</Style>

	<Style Selector="TextBlock.List1">
		<Setter Property="FontSize" Value="15"></Setter>
		<Setter Property="FontWeight" Value="DemiBold"></Setter>
		<Setter Property="HorizontalAlignment" Value="Center"></Setter>
		<Setter Property="TextWrapping" Value="Wrap"></Setter>
		<Setter Property="TextAlignment" Value="Center"></Setter>
		<Setter Property="Height" Value="45"></Setter>
	</Style>

	<Style Selector="TextBlock.List2">
		<Setter Property="FontSize" Value="15"></Setter>
		<Setter Property="FontWeight" Value="DemiBold"></Setter>
		<Setter Property="HorizontalAlignment" Value="Center"></Setter>
		<Setter Property="Margin" Value="0 0 0 10"></Setter>
	</Style>

	<Style Selector="TextBlock.List3">
		<Setter Property="FontSize" Value="20"></Setter>
		<Setter Property="FontWeight" Value="Bold"></Setter>
		<Setter Property="HorizontalAlignment" Value="Center"></Setter>
		<Setter Property="Margin" Value="0 0 0 10"></Setter>
	</Style>

	<Style Selector="TextBlock.Head">
		<Setter Property="Foreground" Value="#445c93"></Setter>
		<Setter Property="FontSize" Value="20"></Setter>
		<Setter Property="FontWeight" Value="Bold"></Setter>
		<Setter Property="Margin" Value="10 10 0 0"></Setter>
	</Style>

	<Style Selector="TextBox.TBField">
		<Setter Property="FontSize" Value="15"></Setter>
		<Setter Property="FontWeight" Value="DemiBold"></Setter>
		<Setter Property="BorderBrush" Value="#5f2568"></Setter>
		<Setter Property="BorderThickness" Value="3"></Setter>
		<Setter Property="CornerRadius" Value="3"></Setter>
		<Setter Property="Height" Value="45"></Setter>
	</Style>

	<Style Selector="ComboBox.CBField">
		<Setter Property="FontSize" Value="12"></Setter>
		<Setter Property="FontWeight" Value="DemiBold"></Setter>
		<Setter Property="BorderBrush" Value="#5f2568"></Setter>
		<Setter Property="BorderThickness" Value="3"></Setter>
		<Setter Property="CornerRadius" Value="3"></Setter>
		<Setter Property="Height" Value="45"></Setter>
	</Style>

	<Style Selector="DatePicker.DPField">
		<Setter Property="FontWeight" Value="DemiBold"></Setter>
		<Setter Property="BorderBrush" Value="#5f2568"></Setter>
		<Setter Property="BorderThickness" Value="3"></Setter>
		<Setter Property="CornerRadius" Value="3"></Setter>
		<Setter Property="Height" Value="45"></Setter>
	</Style>

	<Style Selector="Button.BTAdd">
		<Setter Property="Foreground" Value="White"></Setter>
		<Setter Property="Background" Value="#b37eb5"></Setter>
		<Setter Property="FontSize" Value="15"></Setter>
		<Setter Property="FontWeight" Value="DemiBold"></Setter>
		<Setter Property="Margin" Value="10 10 0 0"></Setter>
		<Setter Property="BorderBrush" Value="#5f2568"></Setter>
		<Setter Property="BorderThickness" Value="3"></Setter>
		<Setter Property="CornerRadius" Value="3"></Setter>
	</Style>

	<Style Selector="Button.BTAdd:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="#5f2568"></Setter>
		<Setter Property="Foreground" Value="White"></Setter>
		<Setter Property="BorderBrush" Value="#b37eb5"></Setter>
	</Style>

	<Style Selector="Button.BTDel">
		<Setter Property="FontSize" Value="15"></Setter>
		<Setter Property="FontWeight" Value="DemiBold"></Setter>
		<Setter Property="Margin" Value="0 10 10 0"></Setter>
		<Setter Property="BorderThickness" Value="3"></Setter>
		<Setter Property="CornerRadius" Value="3"></Setter>
		<Setter Property="Background" Value="White"></Setter>
		<Setter Property="Foreground" Value="#5f2568"></Setter>
		<Setter Property="BorderBrush" Value="#5f2568"></Setter>
	</Style>

	<Style Selector="Button.BTDel:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="#5f2568"></Setter>
		<Setter Property="Foreground" Value="White"></Setter>
		<Setter Property="BorderBrush" Value="#5f2568"></Setter>
	</Style>
</Styles>
